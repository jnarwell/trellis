{
  "name": "trellis",
  "version": "0.0.1",
  "private": true,
  "description": "Universal enterprise data platform for product and process data",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:unit": "vitest run --workspace",
    "test:integration": "vitest run -c vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testcontainers/postgresql": "^10.4.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "pg": "^8.11.3",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "vitest": "^1.2.0"
  }
}
