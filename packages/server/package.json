{
  "name": "@trellis/server",
  "version": "0.0.1",
  "description": "Trellis API server (Fastify)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests",
    "test": "pnpm exec vitest run",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "migrate": "tsx src/db/migrations.ts"
  },
  "dependencies": {
    "@trellis/kernel": "workspace:*",
    "@trellis/shared": "workspace:*",
    "commander": "^12.0.0",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.0",
    "@fastify/type-provider-typebox": "^5.0.0",
    "@sinclair/typebox": "^0.34.0",
    "pg": "^8.13.0",
    "js-yaml": "^4.1.0",
    "glob": "^11.0.0",
    "zod": "^3.24.0",
    "uuidv7": "^1.0.2",
    "jsonwebtoken": "^9.0.2",
    "@fastify/websocket": "^11.0.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@prisma/client": "^6.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/pg": "^8.11.0",
    "@types/ws": "^8.5.13",
    "tsx": "^4.19.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
