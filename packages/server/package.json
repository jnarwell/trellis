{
  "name": "@trellis/server",
  "version": "0.0.1",
  "description": "Trellis API server (Fastify)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "pnpm exec vitest run"
  },
  "dependencies": {
    "@trellis/kernel": "workspace:*",
    "@trellis/shared": "workspace:*",
    "js-yaml": "^4.1.0",
    "glob": "^11.0.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
